    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    @RenderSection("Styles", false)
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- Notifications: style can be found in dropdown.less -->
                        <li class="dropdown notifications-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-bell-o"></i>
                                @*<span class="label label-warning">@Html.Action("numberOfRequest", "Home")</span>*@
                            </a>
                            <ul class="dropdown-menu">
                                @*<li class="header">You have @Html.Action("numberOfRequest", "Home") notifications</li>*@
                                <li>
                                    <!-- inner menu: contains the actual data -->
                                    <ul class="menu">
                                        <li>
                                            <a href="/Store/Home/Index">
                                                @*<i class="fa fa-warning text-yellow"></i> You have @Html.Action("numberOfRequest", "Home") unapproved requests*@
                                            </a>
                                        </li>


                                    </ul>
                                </li>
                                <li class="footer"><a href="/Store/Home/Index">View all</a></li>
                            </ul>
                        </li>
                        <!-- User Account: style can be found in dropdown.less -->
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="/Content/Librarian/dist/img/user2-160x160.jpg" class="user-image" alt="User Image">
                                <span class="hidden-xs"> @Session["userHello"]</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="/Content/Librarian/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                                    <p>
                                        @Session["userHello"] - Web Developer
                                        <small>Member since Nov. 2019</small>
                                    </p>
                                </li>
                                <!-- Menu Body -->
                                <li class="user-body">
                                    <div class="row">
                                        <div class="col-xs-4 text-center">
                                            <a href="#">Followers</a>
                                        </div>
                                        <div class="col-xs-4 text-center">
                                            <a href="#">Sales</a>
                                        </div>
                                        <div class="col-xs-4 text-center">
                                            <a href="#">Friends</a>
                                        </div>
                                    </div>
                                    <!-- /.row -->
                                </li>
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        @{
                                            int userID = Convert.ToInt16(Session["UserID"]);
                                    }
                                    <a href="/Store/AccountAdmin/Account/@userID" class="btn btn-default btn-flat">Tài khoản</a>
                                </div>
                                <div class="pull-right">
                                    @*<a href="~/Store/AccountAdmin/Login" class="btn btn-default btn-flat">Sign out</a>*@
                                    <i class="btn btn-default btn-flat">@Html.ActionLink("Đăng xuất", "LogOff", "AccountAdmin")</i>
                                </div>
                            </li>
                        </ul>
                    </li>
                    <!-- Control Sidebar Toggle Button -->
                </ul>
            </div>
        </nav>
    </header>
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <!-- Sidebar user panel -->
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="/Content/Librarian/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                </div>
                <div class="pull-left info">
                    <p>@Session["userHello"]</p>
                    <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                </div>
            </div>
            <!-- search form
        <form action="#" method="get" class="sidebar-form">
          <div class="input-group">
            <input type="text" name="q" class="form-control" placeholder="Search...">
            <span class="input-group-btn">
                  <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i>
                  </button>
                </span>
          </div>
        </form>

        .search form -->
            <!-- sidebar menu: : style can be found in sidebar.less -->
            <ul class="sidebar-menu" data-widget="tree">
                <li class="header">CHỨC NĂNG CHÍNH</li>
                <li>
                    <a href="/Store/Home/Index">
                        <i class="fa fa-dashboard"></i> <span>Trang Chủ</span>
                    </a>
                </li>
                <li>
                    <a href="/Store/Statistical/Index">
                        <i class="fa fa-dashboard"></i> <span>Thống Kê</span>
                    </a>
                </li>
                <!--Profile-->
                <li>
                    <a href="/Store/AccountAdmin/Profile">
                        <i class="fa fa-universal-access"></i> <span>Tài Khoản</span>

                    </a>
                </li>
                <!-- Book Management-->
                <li>
                    <a target="_self" href="@Url.Action("Index","Book")">
                        <i class="fa fa-th"></i> <span>Quản Lý Sách</span>
                    </a>
                </li>
                <!--Author Management-->
                <li>
                    <a href="/Store/Author/Index">
                        <i class="fa fa-circle"></i> <span>Quản Lý Tác Giả</span>
                    </a>
                </li>
                <!--Categories Management-->
                <li>
                    <a href="/Store/Category/Index">
                        <i class="fa fa-pie-chart"></i> <span>Quản Lý Thể Loại</span>
                    </a>
                </li>
                <!--Publisher Management-->
                <li>
                    <a href="/Store/Publisher/Index">
                        <i class="fa fa-file-code-o"></i> <span>Quản Lý NXB</span>
                    </a>
                </li>
                <!--Order Management-->
                <li>
                    <a href="/Store/Order/Index">
                        <i class="fa fa-file-image-o"></i> <span>Quản lý Đơn hàng</span>
                    </a>
                </li>
                <li>
                    <a href="/Store/Comment/Index">
                        <i class="fa fa-file-movie-o"></i><span>Quản Lý Bình Luận</span>
                    </a>
                </li>
            </ul>
        </section>
        <!-- /.sidebar -->
    </aside>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        @if (TempData["AlertMessage"] != null)
        {
            <div id="AlertBox" class="alert @TempData["AlertType"] hidden">
                @TempData["AlertMessage"]
            </div>
        }
        @RenderBody()
    </div>
    <!-- /.content-wrapper -->
    <footer class="main-footer">
        <div class="pull-right hidden-xs">
            <b>Version</b> 2.4.0
        </div>
        <strong>Copyright &copy; 2014-2016 <a href="https://adminlte.io">Almsaeed Studio</a>.</strong> All rights
        reserved.
    </footer>
    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Create the tabs -->
        <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
            <li><a href="#control-sidebar-home-tab" data-toggle="tab"><i class="fa fa-home"></i></a></li>
            <li><a href="#control-sidebar-settings-tab" data-toggle="tab"><i class="fa fa-gears"></i></a></li>
        </ul>
        <!-- Home tab content -->
        <div class="tab-pane" id="control-sidebar-home-tab">
            <h3 class="control-sidebar-heading">Recent Activity</h3>
            <ul class="control-sidebar-menu">
                <li>
                    <a href="javascript:void(0)">
                        <i class="menu-icon fa fa-birthday-cake bg-red"></i>
                        <div class="menu-info">
                            <h4 class="control-sidebar-subheading">Langdon's Birthday</h4>
                            <p>Will be 23 on April 24th</p>
                        </div>
                    </a>
                </li>
                <li>
                    <a href="javascript:void(0)">
                        <i class="menu-icon fa fa-user bg-yellow"></i>
                        <div class="menu-info">
                            <h4 class="control-sidebar-subheading">Frodo Updated His Profile</h4>
                            <p>New phone +1(800)555-1234</p>
                        </div>
                    </a>
                </li>
                <li>
                    <a href="javascript:void(0)">
                        <i class="menu-icon fa fa-envelope-o bg-light-blue"></i>
                        <div class="menu-info">
                            <h4 class="control-sidebar-subheading">Nora Joined Mailing List</h4>
                            <p>nora@example.com</p>
                        </div>
