@model BS_Project.EF.Author
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Store/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script>
        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtImage').val(url);
                $("#img").attr("src", url);
            };
            finder.popup();
        })
        var editor = CKEDITOR.replace('txtcontent', {
            customConfig: '/Scripts/ckeditor/config.js'
        })
    </script>
}

<section class="content-header">
    <h1>
        Chỉnh sửa Thông tin tác giả
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Store/Home/Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/Store/Author/Index">Author Management</a></li>
        <li class="active">Edit</li>
    </ol>
</section>
@using (Html.BeginForm("Edit", "Author", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Cập nhật Tác giả</h3>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.AuthorID)
            <div class="box-body">
                <div class="row">
                    <div class="col-md-6">
                        <!-- form-group -->
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name)
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control select2", @style = "width: 100%;" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                        </div>
                        <!-- /.form-group -->
                        <!-- form-group -->
                        <div class="form-group">
                            @Html.LabelFor(model => model.PenName)
                            @Html.EditorFor(model => model.PenName, new { htmlAttributes = new { @class = "form-control select2", @style = "width: 100%;" } })
                            @Html.ValidationMessageFor(model => model.PenName, "", new { @class = "text-danger" })

                        </div>
                        <!-- /.form-group -->
                        <!-- form-group -->
                        <div class="form-group">
                            @Html.LabelFor(model => model.Overview)
                            @Html.Raw(Html.TextAreaFor(model => model.Overview, new { htmlAttributes = new { @class = "form-control select2", @style = "width: 100%;" }, id = "txtcontent" }))
                            @Html.ValidationMessageFor(model => model.Overview, "", new { @class = "text-danger" })
                        </div>
                        <!-- /.form-group -->
                        <div class="form-group">
                            Hình ảnh
                            <input class="form-control select2" name="txtImageURL" id="txtImage" value="@Html.DisplayFor(model => model.Image.ImageURL)" />
                            <a id="btnSelectImage" href="#">Chọn hình ảnh</a>
                            @Html.ValidationMessageFor(model => model.Image.ImageURL, "", new { @class = "text-danger" })
                        </div>
                        <!--Image-->
                        <div class="ImageContainer">
                            <img id="img" src="@Html.DisplayFor(model => model.Image.ImageURL)" width="80" />
                        </div>
                        <!-- /.form-group -->
                    </div>
                    <!-- /.col -->

                </div>
                <!-- /.row -->
            </div>
            <div class="box-footer" style="margin-left: 10px;">
                <input class="btn btn-success" type="submit" value="Lưu" style="width:90px" />
                <button style="width:90px" class="btn btn-default">@Html.ActionLink("Trở về Trang danh sách", "Index")</button>
            </div>
        </div>
    </section>
}